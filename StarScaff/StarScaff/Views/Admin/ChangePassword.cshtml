                content: '';
                display: block;
                opacity: 0;
                visibility: hidden;
                -webkit-transition: 0.3s ease;
                transition: 0.3s ease;
            }

            

        .form-header {
            margin: 0 0 40px;
        }

            .form-header h1 {
                padding: 4px 0;
                color: #4285F4;
